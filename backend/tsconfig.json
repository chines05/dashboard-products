{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // ← Mude de "esnext" para "CommonJS"
    "moduleResolution": "Node", // ← Mude de "nodenext" para "Node"
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
